// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("user")
  subscription  String?   @default("trial")
  trialEndsAt   DateTime?
  isActive      Boolean   @default(true)
  lastLogin     DateTime?
  loginAttempts Int       @default(0)
  lockedUntil   DateTime?
  company       String?
  credits       Float?    @default(0.0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Enhanced Profile Fields (like NodePress)
  username        String?   @unique
  headline        String?            // Professional headline
  about           String?   @db.Text // About me / bio
  jobTitle        String?
  location        String?
  website         String?
  phone           String?
  coverImage      String?            // Profile cover/banner image
  skills          String[]  @default([])
  interests       String[]  @default([])
  socialLinks     Json?              // { linkedin, twitter, github, etc. }
  isPublic        Boolean   @default(true)
  followersCount  Int       @default(0)
  followingCount  Int       @default(0)
  onlineStatus    String    @default("offline") // online, away, busy, offline
  lastSeenAt      DateTime?

  accounts              Account[]
  sessions              Session[]
  projects              Project[]
  securityLogs          SecurityLog[]
  payPerUseTransactions PayPerUseTransaction[]
  creditPurchases       CreditPurchase[]
  reviews               Review[]
  issueReports      IssueReport[]
  riggingEquipment  RiggingEquipment[]
  equipmentMovements EquipmentMovement[]
  userSessions      UserSession[]
  stripeSubscriptions StripeSubscription[]
  chatMessages      ChatMessage[]
  expenses            Expense[]
  expenseCategories   ExpenseCategory[]
  lodgingBookings     LodgingBooking[]
  loftLocations       LoftLocation[]
  maintenanceSchedules MaintenanceSchedule[]
  equipmentUsageLogs  EquipmentUsageLog[]
  profile             UserProfile?

  // LMS Relations
  instructorCourses   Course[]           @relation("CourseInstructor")
  lmsProgress         LMSProgress[]
  certificates        Certificate[]
  courseEnrollments   CourseEnrollment[]
  coursePurchases     CoursePurchase[]
  quizAttempts        QuizAttempt[]
  videoProgress       VideoProgress[]
  lessonProgress      LessonProgress[]
  cartItems           CartItem[]

  // Social Features Relations
  followers           UserFollow[]       @relation("UserFollow_followingIdToUser")
  following           UserFollow[]       @relation("UserFollow_followerIdToUser")
  conversations1      Conversation[]     @relation("Conversation_participant1IdToUser")
  conversations2      Conversation[]     @relation("Conversation_participant2IdToUser")
  directMessages      DirectMessage[]
  ownedGroups         Group[]
  groupMemberships    GroupMember[]
  groupMessages       GroupMessage[]
  activities          Activity[]
}

model UserProfile {
  id             String   @id @default(cuid())
  userId         String   @unique
  phone          String?
  location       String?
  bio            String?  @db.Text
  jobTitle       String?
  department     String?
  skills         String?  @db.Text // JSON array
  certifications String?  @db.Text // JSON array
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Project {
  id          String      @id @default(cuid())
  name        String
  description String?
  category    ProjectCategory @default(CAD)
  type        String?     // Specific project type within category
  data        String?     // JSON data for CAD drawings, RAMS, etc.
  tags        String[]    // Project tags for better organization
  status      ProjectStatus @default(ACTIVE)
  userId      String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  expenses        Expense[]
  lodgingBookings LodgingBooking[]
}

enum ProjectCategory {
  CAD
  RAMS
  LOFT_MANAGEMENT
  LOAD_CALCULATION
  TRAINING
  INSPECTION
  GENERAL
}

enum ProjectStatus {
  ACTIVE
  COMPLETED
  ARCHIVED
  TEMPLATE
}

// Session Management for Production
model UserSession {
  id           String   @id @default(cuid())
  userId       String
  sessionToken String   @unique
  ipAddress    String
  userAgent    String
  location     String?
  isActive     Boolean  @default(true)
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  lastActivity DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_sessions")
}

// Security Logging
model SecurityLog {
  id          String   @id @default(cuid())
  userId      String?
  action      String
  resource    String?
  ipAddress   String
  userAgent   String
  success     Boolean
  details     String?
  riskLevel   String   @default("LOW")
  createdAt   DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("security_logs")
}

// System Configuration
model SystemConfig {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("system_config")
}

// Issue Reporting System
model IssueReport {
  id          String   @id @default(cuid())
  userId      String?
  title       String
  description String
  category    String
  priority    String   @default("MEDIUM")
  status      String   @default("OPEN")
  browserInfo String?
  url         String?
  screenshot  String?
  logs        String?
  assignedTo  String?
  resolution  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  resolvedAt  DateTime?

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("issue_reports")
}

// ============================================
// Learning Management System (LMS) - Complete
// ============================================

// Course - Main course entity
model Course {
  id              String   @id @default(cuid())
  title           String
  slug            String   @unique
  description     String   @db.Text
  shortDescription String?
  thumbnail       String?
  previewVideoUrl String?
  instructorId    String
  category        String   @default("general")
  difficulty      String   @default("beginner") // beginner, intermediate, advanced
  duration        Int?     // Total duration in minutes
  price           Float    @default(0) // 0 = free
  currency        String   @default("GBP")
  isFeatured      Boolean  @default(false)
  isPublished     Boolean  @default(false)
  publishedAt     DateTime?
  requirements    String[] @default([])
  learningOutcomes String[] @default([])
  tags            String[] @default([])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  instructor      User     @relation("CourseInstructor", fields: [instructorId], references: [id], onDelete: Cascade)
  lessons         CourseLesson[]
  enrollments     CourseEnrollment[]
  purchases       CoursePurchase[]
  quizzes         Quiz[]
  certificates    Certificate[]
  progress        LMSProgress[]

  @@map("courses")
}

// CourseLesson - Individual lessons within a course
model CourseLesson {
  id          String   @id @default(cuid())
  courseId    String
  title       String
  description String?  @db.Text
  content     String?  @db.Text // Rich text content
  order       Int
  duration    Int?     // Duration in minutes
  isFree      Boolean  @default(false) // Free preview lesson
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  videos      LessonVideo[]
  quizzes     Quiz[]
  progress    LessonProgress[]

  @@unique([courseId, order])
  @@map("course_lessons")
}

// LessonVideo - Video content for lessons
model LessonVideo {
  id          String   @id @default(cuid())
  lessonId    String
  title       String
  description String?
  videoUrl    String   // URL to video (YouTube, Vimeo, or hosted)
  videoType   String   @default("youtube") // youtube, vimeo, hosted, upload
  duration    Int?     // Duration in seconds
  order       Int      @default(0)
  thumbnail   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  lesson      CourseLesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  progress    VideoProgress[]

  @@map("lesson_videos")
}

// VideoProgress - Track video watch progress per user
model VideoProgress {
  id            String   @id @default(cuid())
  userId        String
  videoId       String
  watchedSeconds Int     @default(0)
  totalSeconds  Int
  completed     Boolean  @default(false)
  completedAt   DateTime?
  lastWatchedAt DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  video         LessonVideo  @relation(fields: [videoId], references: [id], onDelete: Cascade)

  @@unique([userId, videoId])
  @@map("video_progress")
}

// LessonProgress - Track lesson completion per user
model LessonProgress {
  id          String   @id @default(cuid())
  userId      String
  lessonId    String
  completed   Boolean  @default(false)
  completedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson      CourseLesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
  @@map("lesson_progress")
}

// Quiz - Quiz configuration linked to lessons or courses
model Quiz {
  id              String   @id @default(cuid())
  courseId        String?
  lessonId        String?
  title           String
  description     String?
  passingScore    Int      @default(80) // Percentage required to pass
  maxAttempts     Int      @default(3) // 0 = unlimited
  timeLimit       Int?     // Time limit in minutes (null = no limit)
  shuffleQuestions Boolean @default(false)
  showResults     Boolean  @default(true)
  isRequired      Boolean  @default(true) // Required to complete lesson/course
  order           Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  course          Course?       @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lesson          CourseLesson? @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  questions       QuizQuestion[]
  attempts        QuizAttempt[]

  @@map("quizzes")
}

// QuizQuestion - Individual questions
model QuizQuestion {
  id          String   @id @default(cuid())
  quizId      String
  question    String   @db.Text
  questionType String  @default("multiple_choice") // multiple_choice, true_false, multi_select
  options     Json     // Array of options: [{text: string, isCorrect: boolean}]
  explanation String?  @db.Text
  points      Int      @default(1)
  order       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  quiz        Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  answers     QuizAnswer[]

  @@map("quiz_questions")
}

// QuizAttempt - Track user quiz attempts
model QuizAttempt {
  id          String   @id @default(cuid())
  userId      String
  quizId      String
  score       Int      // Percentage score
  passed      Boolean
  startedAt   DateTime @default(now())
  completedAt DateTime?
  timeSpent   Int?     // Time spent in seconds
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  quiz        Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  answers     QuizAnswer[]

  @@map("quiz_attempts")
}

// QuizAnswer - Individual answers in an attempt
model QuizAnswer {
  id          String   @id @default(cuid())
  attemptId   String
  questionId  String
  selectedOptions Json // Array of selected option indices
  isCorrect   Boolean
  createdAt   DateTime @default(now())

  attempt     QuizAttempt  @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  question    QuizQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([attemptId, questionId])
  @@map("quiz_answers")
}

// CourseEnrollment - Track which users are enrolled in courses
model CourseEnrollment {
  id          String   @id @default(cuid())
  userId      String
  courseId    String
  enrolledAt  DateTime @default(now())
  expiresAt   DateTime? // For time-limited access
  status      String   @default("active") // active, expired, cancelled
  source      String   @default("purchase") // purchase, gift, promo, admin

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@map("course_enrollments")
}

// CoursePurchase - Payment transactions for course purchases
model CoursePurchase {
  id                String   @id @default(cuid())
  userId            String
  courseId          String
  amount            Float
  currency          String   @default("GBP")
  stripePaymentId   String?  @unique
  stripeSessionId   String?
  status            String   @default("pending") // pending, completed, failed, refunded
  paymentMethod     String?  // card, paypal, etc.
  receiptUrl        String?
  invoiceNumber     String?  @unique
  purchasedAt       DateTime @default(now())
  refundedAt        DateTime?
  refundAmount      Float?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  course            Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@map("course_purchases")
}

// LMSProgress - Overall course progress per user
model LMSProgress {
  id              String   @id @default(cuid())
  userId          String
  courseId        String
  progress        Int      @default(0) // Percentage
  lessonsCompleted Int     @default(0)
  totalLessons    Int      @default(0)
  quizzesPassed   Int      @default(0)
  totalQuizzes    Int      @default(0)
  completed       Boolean  @default(false)
  completedAt     DateTime?
  lastAccessedAt  DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  course          Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@map("lms_progress")
}

// Certificate - Certificates issued upon course completion
model Certificate {
  id                String   @id @default(cuid())
  userId            String
  courseId          String
  certificateNumber String   @unique
  studentName       String
  courseName        String
  completionDate    DateTime @default(now())
  score             Int?     // Final quiz score if applicable
  issuedAt          DateTime @default(now())
  expiresAt         DateTime?
  templateVersion   String   @default("v1")
  pdfUrl            String?  // Stored PDF URL
  verificationUrl   String?
  metadata          Json?    // Additional certificate data
  createdAt         DateTime @default(now())

  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  course            Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@map("certificates")
}

// Shopping Cart for multiple course purchases
model CartItem {
  id        String   @id @default(cuid())
  userId    String
  courseId  String
  addedAt   DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@map("cart_items")
}

model StripeSubscription {
  id                    String   @id @default(cuid())
  userId                String
  stripeCustomerId      String
  stripeSubscriptionId  String   @unique
  status                String   // active, canceled, past_due, etc.
  planId                String   // Stripe price ID
  planName              String   // basic, pro, enterprise
  amount                Int      // Amount in cents
  currency              String   @default("usd")
  currentPeriodStart    DateTime
  currentPeriodEnd      DateTime
  canceledAt            DateTime?
  lastPaymentDate       DateTime?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("stripe_subscriptions")
}

// Rigging Loft Management
model RiggingEquipment {
  id                String   @id @default(cuid())
  equipmentNumber   String   @unique
  type              String
  category          String
  manufacturer      String
  model             String?
  workingLoadLimit  Float
  status            String   @default("IN_SERVICE")
  location          String
  condition         Int      @default(5)
  lastInspection    DateTime?
  nextInspection    DateTime?
  certificationExpiry DateTime?
  notes             String?
  userId            String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user               User                     @relation(fields: [userId], references: [id], onDelete: Cascade)
  movements          EquipmentMovement[]
  inspections        EquipmentInspection[]
  certifications     EquipmentCertification[]
  maintenanceSchedules MaintenanceSchedule[]
  usageLogs          EquipmentUsageLog[]

  @@map("rigging_equipment")
}

model EquipmentMovement {
  id                  String   @id @default(cuid())
  equipmentId         String
  equipmentNumber     String
  movementType        String
  fromLocation        String
  toLocation          String
  checkedOutBy        String?
  checkedInBy         String?
  projectReference    String
  movementDate        DateTime
  expectedReturnDate  DateTime?
  actualReturnDate    DateTime?
  status              String   @default("CHECKED_OUT")
  notes               String?
  userId              String
  createdAt           DateTime @default(now())

  equipment RiggingEquipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("equipment_movements")
}

model EquipmentInspection {
  id              String   @id @default(cuid())
  equipmentId     String
  inspectionType  String
  inspectedBy     String
  inspectionDate  DateTime
  nextInspectionDate DateTime?
  condition       Int
  defectsFound    String?
  actionsTaken    String?
  passed          Boolean
  certificateNumber String?
  createdAt       DateTime @default(now())

  equipment RiggingEquipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)

  @@map("equipment_inspections")
}

model EquipmentCertification {
  id                String   @id @default(cuid())
  equipmentId       String
  certificateNumber String   @unique
  certificateType   String   // initial, periodic, repair, etc.
  issuedDate        DateTime
  expiryDate        DateTime
  issuedBy          String
  competentPerson   String
  testLoad          Float?
  testResult        String   @default("pass") // pass, fail
  notes             String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  equipment RiggingEquipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)

  @@map("equipment_certifications")
}

// Enhanced Loft Management Models
model LoftLocation {
  id          String   @id @default(cuid())
  name        String
  description String?
  building    String?
  floor       String?
  section     String?
  capacity    Int?     // Maximum number of items
  isActive    Boolean  @default(true)
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([name, userId])
  @@map("loft_locations")
}

model MaintenanceSchedule {
  id              String   @id @default(cuid())
  equipmentId     String
  maintenanceType String   // routine, repair, calibration, etc.
  scheduledDate   DateTime
  completedDate   DateTime?
  performedBy     String?
  description     String
  cost            Float?
  notes           String?
  nextScheduledDate DateTime?
  userId          String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  equipment RiggingEquipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("maintenance_schedules")
}

model EquipmentUsageLog {
  id            String   @id @default(cuid())
  equipmentId   String
  usedBy        String
  projectName   String?
  usageDate     DateTime
  duration      Float?   // Hours of usage
  purpose       String?
  condition     Int?     // Condition after use (1-5)
  notes         String?
  userId        String
  createdAt     DateTime @default(now())

  equipment RiggingEquipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("equipment_usage_logs")
}

model Lead {
  id              String   @id @default(cuid())
  email           String   @unique
  name            String
  company         String?
  phone           String?
  source          String?
  interests       String[] @default([])
  leadMagnet      String?
  ipAddress       String?
  status          String   @default("NEW") // NEW, CONTACTED, QUALIFIED, CONVERTED, LOST
  leadScore       Int      @default(20)
  lastContactDate DateTime?
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  interactions LeadInteraction[]

  @@map("leads")
}

model LeadInteraction {
  id          String   @id @default(cuid())
  leadId      String
  type        String   // EMAIL, CALL, MEETING, DOWNLOAD, etc.
  description String?
  outcome     String?
  createdAt   DateTime @default(now())

  lead Lead @relation(fields: [leadId], references: [id], onDelete: Cascade)

  @@map("lead_interactions")
}

model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  company   String?
  phone     String?
  message   String
  demoType  String   @default("general")
  ipAddress String?
  status    String   @default("NEW") // NEW, CONTACTED, RESOLVED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contact_submissions")
}

model PayPerUseTransaction {
  id          String   @id @default(cuid())
  userId      String
  serviceType String
  serviceName String
  quantity    Int      @default(1)
  unitPrice   Float
  totalAmount Float
  paymentId   String?
  status      String   @default("PENDING") // PENDING, COMPLETED, FAILED, REFUNDED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("pay_per_use_transactions")
}

model Review {
  id        String   @id @default(cuid())
  userId    String
  rating    Int      // 1-5 stars
  title     String
  content   String
  approved  Boolean  @default(false)
  helpful   Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("reviews")
}

model CreditPurchase {
  id            String   @id @default(cuid())
  userId        String
  packageType   String
  packageName   String
  creditsAmount Int
  price         Float
  paymentMethod String   @default("stripe")
  paymentId     String?
  status        String   @default("PENDING") // PENDING, COMPLETED, FAILED, REFUNDED
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("credit_purchases")
}

model ChatMessage {
  id          String   @id @default(cuid())
  content     String
  messageType String   @default("text") // text, image, file, video_call, etc.
  roomId      Int      @default(1) // Chat room ID (1 = general chat)
  replyTo     String?  // ID of message being replied to
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // User relationship
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("chat_messages")
}

// Expense Management System
model ExpenseCategory {
  id          String   @id @default(cuid())
  name        String
  description String?
  color       String   @default("#3b82f6")
  icon        String?
  isDefault   Boolean  @default(false)
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expenses Expense[]

  @@unique([name, userId])
  @@map("expense_categories")
}

model Expense {
  id              String          @id @default(cuid())
  title           String
  description     String?
  amount          Float
  currency        String          @default("USD")
  categoryId      String
  expenseDate     DateTime
  receiptUrl      String?         // URL to uploaded receipt image
  receiptFileName String?
  paymentMethod   PaymentMethod   @default(CASH)
  vendor          String?
  projectId       String?         // Link to specific project
  location        String?
  tags            String[]        @default([])
  status          ExpenseStatus   @default(PENDING)
  isReimbursable  Boolean         @default(true)
  reimbursedAt    DateTime?
  reimbursedBy    String?
  notes           String?
  userId          String
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  category        ExpenseCategory  @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  project         Project?         @relation(fields: [projectId], references: [id], onDelete: SetNull)
  lodgingBookings LodgingBooking[]

  @@map("expenses")
}

enum PaymentMethod {
  CASH
  CREDIT_CARD
  DEBIT_CARD
  BANK_TRANSFER
  CHECK
  DIGITAL_WALLET
  COMPANY_CARD
  PETTY_CASH
}

enum ExpenseStatus {
  PENDING
  APPROVED
  REJECTED
  REIMBURSED
  CANCELLED
}

// Lodging Management System
model LodgingBooking {
  id              String          @id @default(cuid())
  bookingReference String         @unique
  hotelName       String
  hotelAddress    String
  hotelPhone      String?
  hotelEmail      String?
  roomType        String
  roomNumber      String?
  checkInDate     DateTime
  checkOutDate    DateTime
  numberOfNights  Int
  numberOfGuests  Int             @default(1)
  guestNames      String[]        @default([])
  totalCost       Float
  currency        String          @default("USD")
  bookingStatus   BookingStatus   @default(CONFIRMED)
  paymentStatus   PaymentStatus   @default(PENDING)
  paymentMethod   PaymentMethod   @default(CREDIT_CARD)
  confirmationNumber String?
  cancellationPolicy String?
  specialRequests String?
  projectId       String?         // Link to specific project
  expenseId       String?         // Link to expense record
  notes           String?
  userId          String
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  expense Expense? @relation(fields: [expenseId], references: [id], onDelete: SetNull)

  @@map("lodging_bookings")
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CHECKED_IN
  CHECKED_OUT
  CANCELLED
  NO_SHOW
}

enum PaymentStatus {
  PENDING
  PAID
  PARTIALLY_PAID
  REFUNDED
  FAILED
}

// ============================================
// SOCIAL FEATURES (like NodePress)
// ============================================

// User Following System
model UserFollow {
  id          String   @id @default(cuid())
  followerId  String
  followingId String
  createdAt   DateTime @default(now())

  follower    User     @relation("UserFollow_followerIdToUser", fields: [followerId], references: [id], onDelete: Cascade)
  following   User     @relation("UserFollow_followingIdToUser", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
  @@map("user_follows")
}

// Direct Messaging - Conversations
model Conversation {
  id             String    @id @default(cuid())
  participant1Id String
  participant2Id String
  lastMessageAt  DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  participant1   User            @relation("Conversation_participant1IdToUser", fields: [participant1Id], references: [id], onDelete: Cascade)
  participant2   User            @relation("Conversation_participant2IdToUser", fields: [participant2Id], references: [id], onDelete: Cascade)
  messages       DirectMessage[]

  @@unique([participant1Id, participant2Id])
  @@index([lastMessageAt])
  @@index([participant1Id])
  @@index([participant2Id])
  @@map("conversations")
}

// Direct Messages
model DirectMessage {
  id             String       @id @default(cuid())
  conversationId String
  senderId       String
  content        String       @db.Text
  messageType    String       @default("text") // text, image, file, gif, video_call
  media          Json?        @default("[]")   // Array of media URLs
  isRead         Boolean      @default(false)
  readAt         DateTime?
  isEdited       Boolean      @default(false)
  editedAt       DateTime?
  isDeleted      Boolean      @default(false)
  deletedAt      DateTime?
  createdAt      DateTime     @default(now())

  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender         User         @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([createdAt])
  @@index([isRead])
  @@index([senderId])
  @@map("direct_messages")
}

// Groups for Team Chat, Support, Project Discussions
model Group {
  id          String          @id @default(cuid())
  name        String
  slug        String          @unique
  description String?
  icon        String?         // Icon name from lucide
  type        GroupType       @default(PUBLIC)
  category    GroupCategory   @default(TEAM)
  ownerId     String
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  owner       User            @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  members     GroupMember[]
  messages    GroupMessage[]

  @@index([createdAt])
  @@index([ownerId])
  @@index([slug])
  @@index([type])
  @@index([category])
  @@map("groups")
}

enum GroupType {
  PUBLIC      // Anyone can join
  PRIVATE     // Invite only
  SYSTEM      // System-created groups (like Support)
}

enum GroupCategory {
  TEAM        // General team discussions
  PROJECT     // Project-specific discussions
  SUPPORT     // Technical support
  ANNOUNCEMENT // Announcements (admin only posting)
  VIDEO       // Video call groups
}

// Group Members
model GroupMember {
  id       String          @id @default(cuid())
  groupId  String
  userId   String
  role     GroupMemberRole @default(MEMBER)
  isMuted  Boolean         @default(false)
  isBanned Boolean         @default(false)
  joinedAt DateTime        @default(now())

  group    Group           @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user     User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
  @@index([groupId])
  @@index([joinedAt])
  @@index([userId])
  @@map("group_members")
}

enum GroupMemberRole {
  OWNER
  ADMIN
  MODERATOR
  MEMBER
}

// Group Messages
model GroupMessage {
  id          String   @id @default(cuid())
  groupId     String
  senderId    String
  content     String   @db.Text
  messageType String   @default("text") // text, image, file, gif, system
  media       Json?    @default("[]")   // Array of media URLs
  replyToId   String?                    // ID of message being replied to
  isPinned    Boolean  @default(false)
  isEdited    Boolean  @default(false)
  editedAt    DateTime?
  isDeleted   Boolean  @default(false)
  deletedAt   DateTime?
  createdAt   DateTime @default(now())

  group       Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  sender      User     @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@index([groupId])
  @@index([senderId])
  @@index([isPinned])
  @@map("group_messages")
}

// User Activity Feed
model Activity {
  id          String       @id @default(cuid())
  userId      String
  type        ActivityType
  targetType  String?      // group, project, user, etc.
  targetId    String?      // ID of the related content
  title       String
  description String?
  link        String?
  imageUrl    String?
  metadata    Json?
  isPublic    Boolean      @default(true)
  createdAt   DateTime     @default(now())

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
  @@index([createdAt])
  @@index([targetType, targetId])
  @@index([isPublic])
  @@map("activities")
}

enum ActivityType {
  JOINED_GROUP
  LEFT_GROUP
  SENT_MESSAGE
  STARTED_VIDEO_CALL
  COMPLETED_PROJECT
  EARNED_CERTIFICATE
  UPDATED_PROFILE
  FOLLOWED_USER
  CREATED_PROJECT
  SHARED_FILE
}

// Blocked IP addresses for security
model BlockedIP {
  id          String   @id @default(cuid())
  ipAddress   String   @unique
  reason      String
  blockedAt   DateTime @default(now())
  blockedBy   String?  // Admin user ID who blocked
  expiresAt   DateTime? // null = permanent block
  isActive    Boolean  @default(true)
  hitCount    Int      @default(0) // Number of blocked requests
  lastHitAt   DateTime?
  details     String?  // JSON with additional info

  // For legal reporting
  reportGenerated Boolean @default(false)
  reportedToAuthorities Boolean @default(false)

  @@map("blocked_ips")
}

// Security Incident Reports for unauthorized testing
model SecurityIncident {
  id              String   @id @default(cuid())
  incidentType    String   // UNAUTHORIZED_PENTEST, BRUTE_FORCE, SQL_INJECTION, etc.
  ipAddresses     String   // JSON array of IPs involved
  startTime       DateTime
  endTime         DateTime?
  description     String
  evidence        String   // JSON with log entries, request details
  severity        String   @default("HIGH") // LOW, MEDIUM, HIGH, CRITICAL
  status          String   @default("OPEN") // OPEN, INVESTIGATING, REPORTED, CLOSED

  // Legal reporting
  reportedToISP   Boolean  @default(false)
  reportedToPolice Boolean @default(false)
  reportedToICO   Boolean  @default(false) // UK Information Commissioner's Office
  legalReference  String?  // Case reference number

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  createdBy       String?  // Admin who created the report

  @@map("security_incidents")
}
